<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.defineviewcollection.view.MyCustomView
        android:id="@+id/id_custom_view"
        style="@style/TestCustomView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ff0000"
        custom:custom_attr1="attr1_xml" />

    <com.example.defineviewcollection.view.DefineViewGroup
        android:id="@+id/dvg"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="#00f00f" />

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击RequestLayout" />

    <Button
        android:id="@+id/btn_invalidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击invalidate" />
</LinearLayout>